}
.container .search-bar .search-box .search-action {
  display: flex;
  align-items: center;
}
.container .search-bar .search-box .search-action .clear-icon {
  padding: 6rpx 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.container .search-bar .search-box .search-action .divider {
  width: 2rpx;
  height: 40rpx;
  background-color: #EEEEEE;
  margin: 0 12rpx;
}
.container .search-bar .search-box .search-action .search-btn {
  font-size: 28rpx;
  color: #FF6B01;
