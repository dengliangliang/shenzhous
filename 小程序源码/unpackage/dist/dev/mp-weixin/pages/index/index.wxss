.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #FFF6F0 0%, #FFF 30%);
  padding-bottom: 30rpx;
}
.container .header {
  position: relative;
  padding: 60rpx 30rpx 80rpx;
  padding-top: calc(60rpx + env(safe-area-inset-top));
  background: linear-gradient(135deg, rgba(255, 107, 1, 0.15), rgba(255, 143, 31, 0.15));
  border-radius: 0 0 30rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 1, 0.1);
}
.container .header .header-content {
  position: relative;
  z-index: 1;
}
.container .header .header-content .logo {
  width: 400rpx;
  height: 200rpx;
  display: block;
  margin-bottom: 20rpx;
  -webkit-transform: translateY(15rpx);
          transform: translateY(15rpx);
}
.container .search-bar {
  -webkit-transform: translateY(-100rpx);
          transform: translateY(-100rpx);
  margin: 0 30rpx;
  margin-bottom: 10rpx;
}
.container .search-bar .search-box {
  -webkit-transform: translateY(-10px);
          transform: translateY(-10px);
  height: 80rpx;
  background: #fff;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
