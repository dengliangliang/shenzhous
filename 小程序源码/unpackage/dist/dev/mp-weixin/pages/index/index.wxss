.container .swiper-area {
  margin: 0 30rpx 40rpx;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}
.container .swiper-area .swiper {
  height: 250rpx;
}
.container .swiper-area .swiper image {
  width: 100%;
  height: 100%;
  border-radius: 24rpx;
}
.container .swiper-area :deep(.uni-swiper-dots) {
  bottom: 20rpx;
}
.container .swiper-area :deep(.uni-swiper-dot) {
  width: 12rpx;
  height: 12rpx;
  border-radius: 6rpx;
  background: rgba(255, 255, 255, 0.6);
  transition: all 0.3s;
}
.container .swiper-area :deep(.uni-swiper-dot).uni-swiper-dot-active {
  width: 24rpx;
  background: #fff;
}
.container .partner-area {
  margin: 0 30rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}
.container .partner-area .partner-scroll {
  width: 100%;
  white-space: nowrap;
}
.container .partner-area .partner-list {
  display: inline-flex;
  padding: 20rpx 10rpx;
  -webkit-animation: scrollPartners 30s linear infinite;
          animation: scrollPartners 30s linear infinite;
}
.container .partner-area .partner-list .partner-item {
  flex-shrink: 0;
  width: 160rpx;
  background: linear-gradient(135deg, #FFF6F0, #FFF);
  border-radius: 20rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.3s;
  border: 1px solid rgba(255, 107, 1, 0.1);
  margin-right: 20rpx;
}
.container .partner-area .partner-list .partner-item image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
}
.container .partner-area .partner-list .partner-item text {
  font-size: 24rpx;
  color: #666;
  width: 100%;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.container .partner-area .partner-list .partner-item:active {
  -webkit-transform: scale(0.95);
          transform: scale(0.95);
  background: linear-gradient(135deg, #FFF, #FFF6F0);
}
.container .partner-area .partner-list::after {
  content: '';
  display: block;
  width: 30rpx;
}
@-webkit-keyframes iconFloat {
0%, 100% {
    -webkit-transform: translateY(0);
            transform: translateY(0);
}
50% {
    -webkit-transform: translateY(-6rpx);
            transform: translateY(-6rpx);
}
}
@keyframes iconFloat {
0%, 100% {
    -webkit-transform: translateY(0);
            transform: translateY(0);
}
50% {
    -webkit-transform: translateY(-6rpx);
            transform: translateY(-6rpx);
}
}
.search-box {
  position: relative;
  overflow: hidden;
}
.search-box::after {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  -webkit-animation: searchLight 3s infinite;
          animation: searchLight 3s infinite;
}
@-webkit-keyframes searchLight {
0% {
    left: -100%;
}
100% {
    left: 100%;
}
}
@keyframes searchLight {
0% {
    left: -100%;
}
100% {
    left: 100%;
}
}
@-webkit-keyframes scrollPartners {
from {
    -webkit-transform: translateX(0);
            transform: translateX(0);
}
to {
    -webkit-transform: translateX(calc(-50% - 15rpx));
            transform: translateX(calc(-50% - 15rpx));
}
}
@keyframes scrollPartners {
from {
    -webkit-transform: translateX(0);
            transform: translateX(0);
}
to {
    -webkit-transform: translateX(calc(-50% - 15rpx));
            transform: translateX(calc(-50% - 15rpx));
}
}
