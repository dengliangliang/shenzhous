.forgot-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #FFF6F1 0%, #FFFFFF 100%);
  padding-top: 100rpx;
  position: relative;
  overflow: hidden;
}
.forgot-container .bg-animation {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 0;
}
.forgot-container .bg-animation .circle {
  position: absolute;
  border-radius: 50%;
  background: linear-gradient(45deg, rgba(255, 107, 1, 0.1), rgba(255, 143, 31, 0.1));
  -webkit-animation: float 6s ease-in-out infinite;
          animation: float 6s ease-in-out infinite;
}
.forgot-container .bg-animation .circle.circle-1 {
  width: 400rpx;
  height: 400rpx;
  top: -100rpx;
  right: -100rpx;
  -webkit-animation-delay: 0s;
          animation-delay: 0s;
}
.forgot-container .bg-animation .circle.circle-2 {
  width: 300rpx;
  height: 300rpx;
  bottom: 10%;
  left: -100rpx;
  -webkit-animation-delay: 2s;
          animation-delay: 2s;
}
.forgot-container .bg-animation .circle.circle-3 {
  width: 200rpx;
  height: 200rpx;
  bottom: 20%;
  right: 10%;
  -webkit-animation-delay: 4s;
          animation-delay: 4s;
}
.forgot-container .header-box {
  position: relative;
  z-index: 1;
  text-align: center;
  padding: 0 40rpx;
  margin-bottom: 80rpx;
}
.forgot-container .header-box .back-btn {
  position: absolute;
  left: 40rpx;
  top: 10rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.forgot-container .header-box .back-btn:active {
  opacity: 0.7;
}
.forgot-container .header-box .title {
  font-size: 40rpx;
  color: #333;
  font-weight: bold;
}
.forgot-container .form-box {
  position: relative;
  z-index: 1;
  padding: 0 60rpx;
}
.forgot-container .form-box .form-content {
  position: relative;
}
.forgot-container .form-box .form-content .input-item {
  -webkit-animation-duration: 0.5s;
          animation-duration: 0.5s;
}
.forgot-container .form-box .form-content .submit-btn {
  -webkit-animation-duration: 0.5s;
          animation-duration: 0.5s;
}
.forgot-container .form-box .input-item {
  display: flex;
  align-items: center;
  height: 110rpx;
  margin-bottom: 30rpx;
  padding: 0 40rpx;
  background: #FFFFFF;
  border-radius: 55rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}
.forgot-container .form-box .input-item .uni-icons {
  margin-right: 20rpx;
}
.forgot-container .form-box .input-item input {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}
.forgot-container .form-box .input-item .code-btn {
  font-size: 26rpx;
  color: #FF6B01;
  padding: 10rpx 0 10rpx 20rpx;
  border-left: 1px solid #EEEEEE;
  white-space: nowrap;
}
.forgot-container .form-box .input-item .code-btn.disabled {
  color: #999;
}
.forgot-container .form-box .input-item .code-btn:active {
  opacity: 0.8;
}
.forgot-container .form-box .input-item:hover {
  -webkit-transform: translateY(-2rpx);
          transform: translateY(-2rpx);
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
}
.forgot-container .form-box .submit-btn {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background: linear-gradient(90deg, #FF6B01, #FF8F1F);
  border-radius: 50rpx;
  color: #fff;
  font-size: 34rpx;
  font-weight: 500;
  letter-spacing: 4rpx;
  margin-top: 80rpx;
  box-shadow: 0 8rpx 20rpx rgba(255, 107, 1, 0.3);
  border: none;
}
.forgot-container .form-box .submit-btn::after {
  border: none;
}
.forgot-container .form-box .submit-btn.btn-loading {
  background: #FF8F1F;
}
.forgot-container .form-box .submit-btn .loading-dots {
  display: flex;
  justify-content: center;
  align-items: center;
}
.forgot-container .form-box .submit-btn .loading-dots text {
  width: 8rpx;
  height: 8rpx;
  background: #fff;
  border-radius: 50%;
  margin: 0 6rpx;
  -webkit-animation: loading 1s infinite;
          animation: loading 1s infinite;
}
.forgot-container .form-box .submit-btn .loading-dots text:nth-child(2) {
  -webkit-animation-delay: 0.2s;
          animation-delay: 0.2s;
}
.forgot-container .form-box .submit-btn .loading-dots text:nth-child(3) {
  -webkit-animation-delay: 0.4s;
          animation-delay: 0.4s;
}
@-webkit-keyframes float {
0%, 100% {
    -webkit-transform: translateY(0);
            transform: translateY(0);
}
50% {
    -webkit-transform: translateY(-20rpx);
            transform: translateY(-20rpx);
}
}
@keyframes float {
0%, 100% {
    -webkit-transform: translateY(0);
            transform: translateY(0);
}
50% {
    -webkit-transform: translateY(-20rpx);
            transform: translateY(-20rpx);
}
}
@-webkit-keyframes loading {
0%, 100% {
    -webkit-transform: scale(1);
            transform: scale(1);
    opacity: 1;
}
50% {
    -webkit-transform: scale(0.5);
            transform: scale(0.5);
    opacity: 0.5;
}
}
@keyframes loading {
0%, 100% {
    -webkit-transform: scale(1);
            transform: scale(1);
    opacity: 1;
}
50% {
    -webkit-transform: scale(0.5);
            transform: scale(0.5);
    opacity: 0.5;
}
}

