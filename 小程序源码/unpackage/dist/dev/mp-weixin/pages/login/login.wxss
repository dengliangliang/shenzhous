.login-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #FFF6F1 0%, #FFFFFF 100%);
  padding-top: 120rpx;
  position: relative;
  overflow: hidden;
}
.login-container .bg-animation {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 0;
}
.login-container .bg-animation .circle {
  position: absolute;
  border-radius: 50%;
  background: linear-gradient(45deg, rgba(255, 107, 1, 0.1), rgba(255, 143, 31, 0.1));
  -webkit-animation: float 6s ease-in-out infinite;
          animation: float 6s ease-in-out infinite;
}
.login-container .bg-animation .circle.circle-1 {
  width: 400rpx;
  height: 400rpx;
  top: -100rpx;
  right: -100rpx;
  -webkit-animation-delay: 0s;
          animation-delay: 0s;
}
.login-container .bg-animation .circle.circle-2 {
  width: 300rpx;
  height: 300rpx;
  bottom: 10%;
  left: -100rpx;
  -webkit-animation-delay: 2s;
          animation-delay: 2s;
}
.login-container .bg-animation .circle.circle-3 {
  width: 200rpx;
  height: 200rpx;
  bottom: 20%;
  right: 10%;
  -webkit-animation-delay: 4s;
          animation-delay: 4s;
}
.login-container .logo-box {
  position: relative;
  z-index: 1;
  text-align: center;
}
.login-container .logo-box .logo {
  width: 440rpx;
  height: 132rpx;
  margin-bottom: 20rpx;
}
.login-container .logo-box .slogan {
  font-size: 32rpx;
  color: #FF6B01;
  letter-spacing: 4rpx;
}
.login-container .form-box {
  position: relative;
  z-index: 1;
  margin-top: 80rpx;
  padding: 0 60rpx;
}
.login-container .form-box .switch-box {
  display: flex;
  justify-content: center;
  margin-bottom: 60rpx;
}
.login-container .form-box .switch-box .switch-item {
  position: relative;
  padding: 0 60rpx;
  text-align: center;
}
.login-container .form-box .switch-box .switch-item text {
  font-size: 36rpx;
  color: #999;
  font-weight: 500;
}
.login-container .form-box .switch-box .switch-item.active text {
  color: #FF6B01;
  font-weight: bold;
}
.login-container .form-box .switch-box .switch-item .line {
  position: absolute;
  left: 50%;
  bottom: -12rpx;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  width: 40rpx;
  height: 8rpx;
  background: #FF6B01;
  border-radius: 4rpx;
}
.login-container .form-box .switch-box .switch-item:active {
  opacity: 0.8;
}
.login-container .form-box .form-content {
  position: relative;
}
.login-container .form-box .form-content .input-item {
  -webkit-animation-duration: 0.5s;
          animation-duration: 0.5s;
}
.login-container .form-box .form-content .submit-btn {
  -webkit-animation-duration: 0.5s;
          animation-duration: 0.5s;
}
.login-container .form-box .input-item {
  display: flex;
  align-items: center;
  height: 110rpx;
  margin-bottom: 30rpx;
  padding: 0 40rpx;
  background: #FFFFFF;
  border-radius: 55rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}
.login-container .form-box .input-item .uni-icons {
  margin-right: 20rpx;
}
.login-container .form-box .input-item input {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}
.login-container .form-box .input-item:hover {
  -webkit-transform: translateY(-2rpx);
          transform: translateY(-2rpx);
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
}
.login-container .form-box .agreement-check {
  display: flex;
  align-items: center;
  padding: 0px 10px;
  margin-top: 40rpx;
}
.login-container .form-box .agreement-check .checkbox {
  padding: 10rpx;
  margin-right: 6rpx;
}
.login-container .form-box .agreement-check .text {
  font-size: 24rpx;
  color: #999;
}
.login-container .form-box .agreement-check .link {
  font-size: 24rpx;
  color: #FF6B01;
}
.login-container .form-box .agreement-check .link:active {
  opacity: 0.8;
}
.login-container .form-box .remember-pwd {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
}
.login-container .form-box .remember-pwd .checkbox {
  padding: 10rpx;
  margin-right: 6rpx;
}
.login-container .form-box .remember-pwd .text {
  font-size: 24rpx;
  color: #999;
}
.login-container .form-box .forgot-password {
  text-align: right;
  padding: 0 20rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.login-container .form-box .forgot-password text {
  font-size: 26rpx;
  color: #FF6B01;
}
.login-container .form-box .forgot-password:active {
  opacity: 0.8;
}
.login-container .form-box .account-options {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.login-container .form-box .account-options .remember-pwd {
  display: flex;
  align-items: center;
  margin: 0;
}
.login-container .form-box .account-options .remember-pwd .uni-icons {
  margin-right: 6rpx;
}
.login-container .form-box .account-options .remember-pwd .text {
  font-size: 24rpx;
  color: #999;
}
.login-container .form-box .account-options .forgot-pwd text {
  font-size: 26rpx;
  color: #FF6B01;
}
.login-container .form-box .account-options .forgot-pwd:active {
  opacity: 0.8;
}
.login-container .form-box .submit-btn {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background: linear-gradient(90deg, #FF6B01, #FF8F1F);
  border-radius: 50rpx;
  color: #fff;
  font-size: 34rpx;
  font-weight: 500;
  letter-spacing: 4rpx;
  margin-top: 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(255, 107, 1, 0.3);
  border: none;
}
.login-container .form-box .submit-btn::after {
  border: none;
}
.login-container .form-box .submit-btn.btn-disabled {
  background: #CCCCCC;
  box-shadow: none;
}
.login-container .form-box .submit-btn .loading-dots {
  display: flex;
  justify-content: center;
  align-items: center;
}
.login-container .form-box .submit-btn .loading-dots text {
  width: 8rpx;
  height: 8rpx;
  background: #fff;
  border-radius: 50%;
  margin: 0 6rpx;
  -webkit-animation: loading 1s infinite;
          animation: loading 1s infinite;
}
.login-container .form-box .submit-btn .loading-dots text:nth-child(2) {
  -webkit-animation-delay: 0.2s;
          animation-delay: 0.2s;
}
.login-container .form-box .submit-btn .loading-dots text:nth-child(3) {
  -webkit-animation-delay: 0.4s;
          animation-delay: 0.4s;
}
@-webkit-keyframes float {
0%,
  100% {
    -webkit-transform: translateY(0);
            transform: translateY(0);
}
50% {
    -webkit-transform: translateY(-20rpx);
            transform: translateY(-20rpx);
}
}
@keyframes float {
0%,
  100% {
    -webkit-transform: translateY(0);
            transform: translateY(0);
}
50% {
    -webkit-transform: translateY(-20rpx);
            transform: translateY(-20rpx);
}
}
@-webkit-keyframes loading {
0%,
  100% {
    -webkit-transform: scale(1);
            transform: scale(1);
    opacity: 1;
}
50% {
    -webkit-transform: scale(0.5);
            transform: scale(0.5);
    opacity: 0.5;
}
}
@keyframes loading {
0%,
  100% {
    -webkit-transform: scale(1);
            transform: scale(1);
    opacity: 1;
}
50% {
    -webkit-transform: scale(0.5);
            transform: scale(0.5);
    opacity: 0.5;
}
}

