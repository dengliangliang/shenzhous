<view class="logistics-container"><view class="top-decoration"><block wx:for="{{5}}" wx:for-item="i" wx:for-index="__i0__" wx:key="*this"><view class="decoration-dot"></view></block></view><block wx:if="{{loading}}"><view class="loading-container"><view class="loading-circle"></view><text class="loading-text">正在加载物流信息...</text></view></block><block wx:else><block><view class="logistics-card animate__animated animate__fadeInDown"><view class="express-header"><view class="express-info"><view class="logo-container"><image src="{{expressLogo}}" mode="aspectFit"></image></view><view class="name-no"><text class="name">{{expressName}}</text><text class="no">{{"单号："+orderNo}}</text></view></view><view class="{{['status-badge','status-'+status]}}">{{statusText}}</view></view><view class="address-info"><view class="address-flow"><view class="from"><view class="label-box">寄</view><view class="info"><text class="name">{{fromName}}</text><text class="address">{{fromAddress}}</text></view></view><view class="flow-line"><view class="dot start"></view><view class="line"></view><view class="dot end"></view></view><view class="to"><view class="label-box">收</view><view class="info"><text class="name">{{toName}}</text><text class="address">{{toAddress}}</text></view></view></view></view></view><view class="logistics-track animate__animated animate__fadeInUp" style="animation-delay:0.2s;"><view class="track-title"><view class="title-with-icon"><uni-icons vue-id="4170c4da-1" type="paperplane-filled" size="18" color="#FF6B01" bind:__l="__l"></uni-icons><text>物流轨迹</text></view><block wx:if="{{$root.g0>0}}"><text class="update-time">{{"更新于 "+trackList[0].time}}</text></block></view><view class="track-list"><block wx:for="{{$root.l0}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="{{['track-item',(index===0)?'track-active':'']}}" style="{{'animation-delay:'+(index*0.1+0.3+'s')+';'}}"><view class="time-column"><text class="time">{{item.$orig.timeStr}}</text><text class="date">{{item.$orig.dateStr}}</text></view><view class="node-column"><view class="{{['node-dot',(index===0)?'active-dot':'']}}"><block wx:if="{{index===0}}"><view class="inner-dot"></view></block><block wx:if="{{index===0}}"><view class="pulse-circle"></view></block></view><block wx:if="{{index!==item.g1-1}}"><view class="node-line"></view></block></view><view class="content-column"><text class="content">{{item.$orig.content}}</text><block wx:if="{{item.$orig.location}}"><view class="location-info"><uni-icons vue-id="{{'4170c4da-2-'+index}}" type="location" size="14" color="#999" bind:__l="__l"></uni-icons><text class="location">{{item.$orig.location}}</text></view></block></view></view></block><block wx:if="{{$root.g2===0}}"><view class="empty-track animate__animated animate__fadeIn"><image src="/static/img/empty-box.png" mode="aspectFit"></image><text>暂无物流信息</text></view></block></view></view><view class="footer-actions animate__animated animate__fadeInUp" style="animation-delay:0.5s;"><button data-event-opts="{{[['tap',[['copyTrackingNo',['$event']]]]]}}" class="action-btn copy-btn" bindtap="__e"><uni-icons vue-id="4170c4da-3" type="paperclip" size="18" color="#666666" bind:__l="__l"></uni-icons><text>复制单号</text></button><button data-event-opts="{{[['tap',[['refreshLogistics',['$event']]]]]}}" class="action-btn refresh-btn" bindtap="__e"><uni-icons vue-id="4170c4da-4" type="refresh" size="18" color="#FFFFFF" bind:__l="__l"></uni-icons><text>刷新</text></button></view></block></block></view>