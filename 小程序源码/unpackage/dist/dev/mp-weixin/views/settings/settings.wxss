.settings-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}
.settings-container .settings-list {
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}
.settings-container .settings-list .settings-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}
.settings-container .settings-list .settings-item:last-child {
  border-bottom: none;
}
.settings-container .settings-list .settings-item .item-left {
  display: flex;
  align-items: center;
}
.settings-container .settings-list .settings-item .item-left .item-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
}
