.notice-list-container {
  min-height: 100vh;
  background: #F5F7FA;
}
.notice-list-container .filter-bar {
  display: flex;
  justify-content: space-around;
  background: #FFFFFF;
  padding: 20rpx 0;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  z-index: 10;
}
.notice-list-container .filter-bar .filter-item {
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
  transition: all 0.3s;
}
.notice-list-container .filter-bar .filter-item.active {
  color: #FF6B01;
  font-weight: 500;
}
.notice-list-container .filter-bar .filter-item.active::after {
  content: '';
  position: absolute;
  bottom: -6rpx;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  width: 30rpx;
  height: 4rpx;
  background: #FF6B01;
  border-radius: 2rpx;
}
.notice-list-container .notice-list {
  padding: 20rpx;
}
.notice-list-container .empty-notice {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}
.notice-list-container .empty-notice .empty-img {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}
.notice-list-container .empty-notice .empty-text {
  font-size: 28rpx;
  color: #999;
}
.notice-list-container .list-content .notice-item {
  margin-bottom: 20rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}
.notice-list-container .list-content .notice-item .notice-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.notice-list-container .list-content .notice-item .notice-header .notice-type {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #fff;
}
.notice-list-container .list-content .notice-item .notice-header .notice-type.type-0 {
  background: linear-gradient(135deg, #FF6B01, #FF8F1F);
}
.notice-list-container .list-content .notice-item .notice-header .notice-type.type-1 {
  background: linear-gradient(135deg, #1890FF, #0050B3);
}
.notice-list-container .list-content .notice-item .notice-header .notice-type.type-2 {
  background: linear-gradient(135deg, #722ED1, #531DAB);
}
.notice-list-container .list-content .notice-item .notice-header .notice-type.type-3 {
  background: linear-gradient(135deg, #13C2C2, #006D75);
}
.notice-list-container .list-content .notice-item .notice-header .notice-time {
  font-size: 24rpx;
  color: #999;
}
.notice-list-container .list-content .notice-item .notice-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}
.notice-list-container .list-content .notice-item .notice-brief {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}
.notice-list-container .list-content .load-more {
  text-align: center;
  padding: 30rpx 0;
}
.notice-list-container .list-content .load-more text {
  font-size: 24rpx;
  color: #999;
}

