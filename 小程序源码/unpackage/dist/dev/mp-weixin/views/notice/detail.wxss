.notice-detail-container {
  min-height: 100vh;
  background: #F5F7FA;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
}
.notice-detail-container .notice-header {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}
.notice-detail-container .notice-header .notice-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.5;
  margin-bottom: 20rpx;
  text-align: center;
}
.notice-detail-container .notice-header .notice-meta {
  display: flex;
  justify-content: center;
  align-items: center;
}
.notice-detail-container .notice-header .notice-meta .notice-type {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #FFFFFF;
  margin-right: 20rpx;
}
.notice-detail-container .notice-header .notice-meta .notice-type.type-0 {
  background: linear-gradient(135deg, #FF6B01, #FF8F1F);
}
.notice-detail-container .notice-header .notice-meta .notice-type.type-1 {
  background: linear-gradient(135deg, #1890FF, #0050B3);
}
.notice-detail-container .notice-header .notice-meta .notice-type.type-2 {
  background: linear-gradient(135deg, #722ED1, #531DAB);
}
.notice-detail-container .notice-header .notice-meta .notice-type.type-3 {
  background: linear-gradient(135deg, #13C2C2, #006D75);
}
.notice-detail-container .notice-header .notice-meta .notice-time {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}
.notice-detail-container .notice-header .notice-meta .notice-time .uni-icons {
  margin-right: 6rpx;
}
.notice-detail-container .notice-content {
  flex: 1;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
}
.notice-detail-container .notice-content .loading-content, .notice-detail-container .notice-content .empty-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}
.notice-detail-container .notice-content .loading-content .uni-icons, .notice-detail-container .notice-content .empty-content .uni-icons {
  margin-bottom: 20rpx;
}
.notice-detail-container .notice-content .loading-content text, .notice-detail-container .notice-content .empty-content text {
  font-size: 28rpx;
  color: #999;
}
.notice-detail-container .notice-content .rich-content {
  font-size: 30rpx;
  color: #333;
  line-height: 1.8;
}
.notice-detail-container .notice-footer {
  padding: 20rpx 0;
  margin-top: auto;
}
.notice-detail-container .notice-footer .back-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 88rpx;
  background: linear-gradient(90deg, #FF8F1F, #FF6B01);
  border-radius: 44rpx;
  color: #FFFFFF;
  font-size: 30rpx;
  font-weight: 500;
  box-shadow: 0 8rpx 16rpx rgba(255, 107, 1, 0.2);
}
.notice-detail-container .notice-footer .back-btn .uni-icons {
  margin-right: 10rpx;
}
.notice-detail-container .notice-footer .back-btn:active {
  -webkit-transform: translateY(2rpx);
          transform: translateY(2rpx);
  box-shadow: 0 4rpx 8rpx rgba(255, 107, 1, 0.2);
}

