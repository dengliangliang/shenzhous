.address-edit {
  min-height: 100vh;
  background: #F8F8F8;
  padding-bottom: 120rpx;
}
.address-edit .form-content {
  background: #FFFFFF;
  margin-top: 20rpx;
}
.address-edit .form-content .form-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1px solid #F5F5F5;
}
.address-edit .form-content .form-item .label {
  width: 160rpx;
  font-size: 28rpx;
  color: #333;
}
.address-edit .form-content .form-item input, .address-edit .form-content .form-item .region-select {
  flex: 1;
  font-size: 28rpx;
}
.address-edit .form-content .form-item.textarea {
  align-items: flex-start;
}
.address-edit .form-content .form-item.textarea textarea {
  flex: 1;
  height: 160rpx;
  font-size: 28rpx;
}
.address-edit .form-content .form-item.switch {
  justify-content: space-between;
}
.address-edit .form-content .form-item.switch .label {
  flex: 1;
}
.address-edit .form-content .form-item .type-switch {
  flex: 1;
  display: flex;
  justify-content: space-around;
}
.address-edit .form-content .form-item .type-switch .type-item {
  display: flex;
  align-items: center;
  padding: 16rpx 30rpx;
  border-radius: 32rpx;
  background: #F8F8F8;
  transition: all 0.3s;
}
.address-edit .form-content .form-item .type-switch .type-item.active {
  color: #FF6B01;
  background: rgba(255, 107, 1, 0.1);
}
.address-edit .form-content .form-item .type-switch .type-item .uni-icons {
  margin-right: 8rpx;
}
.address-edit .form-content .form-item .type-switch .type-item text {
  font-size: 28rpx;
  color: inherit;
}
.address-edit .form-content .form-item .region-select {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.address-edit .form-content .form-item .region-select .selected {
  color: #333;
}
.address-edit .placeholder {
  color: #999;
}
.address-edit .bottom-btn {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 20rpx;
  background: #FFFFFF;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.address-edit .bottom-btn .submit-btn {
  height: 80rpx;
  line-height: 80rpx;
  background: linear-gradient(90deg, #FF6B01, #FF8F1F);
  border-radius: 40rpx;
  color: #FFFFFF;
  font-size: 32rpx;
}
.address-edit .bottom-btn .submit-btn[loading] {
  opacity: 0.8;
}

