.postal-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
}
.postal-container .search-box {
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}
.postal-container .search-box .search-input {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  padding: 16rpx 24rpx;
  border-radius: 8rpx;
}
.postal-container .search-box .search-input input {
  flex: 1;
  font-size: 28rpx;
  margin: 0 20rpx;
}
.postal-container .filter-box {
  display: flex;
  justify-content: space-between;
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}
.postal-container .filter-box .picker-item {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}
.postal-container .filter-box .picker-item text {
  margin-right: 8rpx;
}
.postal-container .result-list {
  height: calc(100vh - 300rpx);
}
.postal-container .result-list .result-item {
  display: flex;
  align-items: flex-start;
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}
.postal-container .result-list .result-item .postal-code {
  font-size: 40rpx;
  font-weight: bold;
  color: #FF6B01;
  margin-right: 30rpx;
}
.postal-container .result-list .result-item .address-info {
  flex: 1;
}
.postal-container .result-list .result-item .address-info .full-address {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
}
.postal-container .result-list .result-item .address-info .detail text {
  font-size: 24rpx;
  color: #999;
  margin-right: 16rpx;
}
.postal-container .result-list .result-item .address-info .detail text:last-child {
  margin-right: 0;
}

