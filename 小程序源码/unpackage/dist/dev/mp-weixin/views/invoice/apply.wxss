.apply-invoice-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}
.apply-invoice-container .header {
  background: linear-gradient(135deg, #FF6B01, #FF8F1F);
  padding: 30rpx;
  color: #fff;
}
.apply-invoice-container .header .title {
  font-size: 36rpx;
  font-weight: bold;
}
.apply-invoice-container .section {
  background-color: #fff;
  margin: 20rpx;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.apply-invoice-container .section .section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}
.apply-invoice-container .section .section-title .optional {
  font-size: 24rpx;
  font-weight: normal;
  color: #999;
}
.apply-invoice-container .section .sub-section {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx dashed #EEEEEE;
}
.apply-invoice-container .section .sub-section .sub-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}
.apply-invoice-container .info-item {
  display: flex;
  margin-bottom: 16rpx;
}
.apply-invoice-container .info-item .label {
  width: 140rpx;
  font-size: 28rpx;
  color: #666;
}
.apply-invoice-container .info-item .value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}
.apply-invoice-container .info-item .value.price {
  color: #FF6B01;
  font-weight: 500;
}
.apply-invoice-container .type-options,
.apply-invoice-container .title-options,
.apply-invoice-container .content-options {
  display: flex;
  flex-wrap: wrap;
}
.apply-invoice-container .type-options .type-item,
.apply-invoice-container .type-options .title-item,
.apply-invoice-container .type-options .content-item,
.apply-invoice-container .title-options .type-item,
.apply-invoice-container .title-options .title-item,
.apply-invoice-container .title-options .content-item,
.apply-invoice-container .content-options .type-item,
.apply-invoice-container .content-options .title-item,
.apply-invoice-container .content-options .content-item {
  padding: 16rpx 30rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
.apply-invoice-container .type-options .type-item text,
.apply-invoice-container .type-options .title-item text,
.apply-invoice-container .type-options .content-item text,
.apply-invoice-container .title-options .type-item text,
.apply-invoice-container .title-options .title-item text,
.apply-invoice-container .title-options .content-item text,
.apply-invoice-container .content-options .type-item text,
.apply-invoice-container .content-options .title-item text,
.apply-invoice-container .content-options .content-item text {
  font-size: 28rpx;
  color: #666;
}
.apply-invoice-container .type-options .type-item.active,
.apply-invoice-container .type-options .title-item.active,
.apply-invoice-container .type-options .content-item.active,
.apply-invoice-container .title-options .type-item.active,
.apply-invoice-container .title-options .title-item.active,
.apply-invoice-container .title-options .content-item.active,
.apply-invoice-container .content-options .type-item.active,
.apply-invoice-container .content-options .title-item.active,
.apply-invoice-container .content-options .content-item.active {
  background-color: rgba(255, 107, 1, 0.1);
  border: 1px solid #FF6B01;
}
.apply-invoice-container .type-options .type-item.active text,
.apply-invoice-container .type-options .title-item.active text,
.apply-invoice-container .type-options .content-item.active text,
.apply-invoice-container .title-options .type-item.active text,
.apply-invoice-container .title-options .title-item.active text,
.apply-invoice-container .title-options .content-item.active text,
.apply-invoice-container .content-options .type-item.active text,
.apply-invoice-container .content-options .title-item.active text,
.apply-invoice-container .content-options .content-item.active text {
  color: #FF6B01;
}
.apply-invoice-container .form-item {
  margin-bottom: 20rpx;
}
.apply-invoice-container .form-item .label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}
.apply-invoice-container .form-item .label.required::before {
  content: '*';
  color: #FF4D4F;
  margin-right: 4rpx;
}
.apply-invoice-container .form-item .input-wrapper {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 20rpx;
}
.apply-invoice-container .form-item .input-wrapper input,
.apply-invoice-container .form-item .input-wrapper textarea {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}
.apply-invoice-container .form-item .input-wrapper .placeholder {
  color: #999;
}
.apply-invoice-container .form-item .input-wrapper .arrow {
  margin-left: auto;
  font-size: 30rpx;
  color: #999;
}
.apply-invoice-container .form-item .remark-textarea {
  width: 100%;
  height: 160rpx;
}
.apply-invoice-container .form-item .word-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  display: block;
}
.apply-invoice-container .footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #fff;
  padding: 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}
.apply-invoice-container .footer .submit-btn {
  background: linear-gradient(135deg, #FF6B01, #FF8F1F);
  color: #fff;
  border-radius: 45rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  font-weight: 500;
}
.apply-invoice-container .title-action-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}
.apply-invoice-container .title-action-buttons .action-btn {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #FF8F1F, #FF6B01);
  border-radius: 40rpx;
  margin: 0 10rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 1, 0.2);
}
.apply-invoice-container .title-action-buttons .action-btn:first-child {
  margin-left: 0;
}
.apply-invoice-container .title-action-buttons .action-btn:last-child {
  margin-right: 0;
}
.apply-invoice-container .title-action-buttons .action-btn text {
  color: #fff;
  font-size: 28rpx;
}

