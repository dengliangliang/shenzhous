.invoice-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 30rpx;
}
.invoice-container .header {
  background: linear-gradient(135deg, #FF6B01, #FF8F1F);
  padding: 30rpx;
  color: #fff;
}
.invoice-container .header .title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}
.invoice-container .header .subtitle {
  font-size: 24rpx;
  opacity: 0.8;
}
.invoice-container .order-list {
  padding: 20rpx;
}
.invoice-container .order-list .order-item {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}
.invoice-container .order-list .order-item .order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1px solid #f5f5f5;
}
.invoice-container .order-list .order-item .order-header .order-id {
  font-size: 26rpx;
  color: #666;
}
.invoice-container .order-list .order-item .order-header .order-status {
  font-size: 26rpx;
  color: #FF6B01;
}
.invoice-container .order-list .order-item .order-content {
  padding: 20rpx;
}
.invoice-container .order-list .order-item .order-content .order-info .info-row {
  display: flex;
  margin-bottom: 10rpx;
}
.invoice-container .order-list .order-item .order-content .order-info .info-row .label {
  font-size: 26rpx;
  color: #999;
  width: 140rpx;
}
.invoice-container .order-list .order-item .order-content .order-info .info-row .value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
}
.invoice-container .order-list .order-item .order-content .order-info .info-row .value.price {
  color: #FF6B01;
  font-weight: bold;
}
.invoice-container .order-list .order-item .order-footer {
  display: flex;
  justify-content: flex-end;
  padding: 20rpx;
  border-top: 1px solid #f5f5f5;
}
.invoice-container .order-list .order-item .order-footer .order-btn {
  display: inline-block;
  padding: 10rpx 30rpx;
  background: linear-gradient(135deg, #FF6B01, #FF8F1F);
  border-radius: 30rpx;
  color: #fff;
  font-size: 26rpx;
}
.invoice-container .order-list .order-item .order-footer .order-btn text {
  font-size: 26rpx;
}
.invoice-container .empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}
.invoice-container .empty-state .empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}
.invoice-container .empty-state .empty-text {
  font-size: 28rpx;
  color: #999;
}
.invoice-container .load-more {
  text-align: center;
  padding: 20rpx;
}
.invoice-container .load-more text {
  font-size: 24rpx;
  color: #999;
}

