.commission-flow-container {
  min-height: 100vh;
  background-color: #f5f7fa;
  padding: 20rpx;
}
.commission-flow-container .summary-card {
  background: linear-gradient(135deg, #FF6B01, #FF8F1F);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 20rpx rgba(255, 107, 1, 0.15);
}
.commission-flow-container .summary-card .card-header {
  margin-bottom: 30rpx;
}
.commission-flow-container .summary-card .card-header .title {
  font-size: 36rpx;
  color: #FFFFFF;
  font-weight: bold;
  display: block;
}
.commission-flow-container .summary-card .card-header .subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 6rpx;
  display: block;
}
.commission-flow-container .summary-card .card-content {
  display: flex;
  justify-content: space-between;
}
.commission-flow-container .summary-card .card-content .divider {
  width: 1px;
  background-color: rgba(255, 255, 255, 0.2);
}
.commission-flow-container .summary-card .card-content .stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.commission-flow-container .summary-card .card-content .stat-item .stat-value {
  font-size: 40rpx;
  color: #FFFFFF;
  font-weight: bold;
}
.commission-flow-container .summary-card .card-content .stat-item .stat-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin: 8rpx 0;
}
.commission-flow-container .summary-card .card-content .stat-item .stat-trend {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}
.commission-flow-container .summary-card .card-content .stat-item .stat-trend.positive {
  background-color: rgba(82, 196, 26, 0.2);
  color: #52C41A;
}
.commission-flow-container .summary-card .card-content .stat-item .stat-trend.negative {
  background-color: rgba(255, 77, 79, 0.2);
  color: #FF4D4F;
}
.commission-flow-container .filter-tabs {
  display: flex;
  background-color: #FFFFFF;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 6rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}
.commission-flow-container .filter-tabs .filter-tab {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  padding: 16rpx 0;
  border-radius: 8rpx;
  transition: all 0.3s;
}
.commission-flow-container .filter-tabs .filter-tab.active {
  background-color: #FF6B01;
  color: #FFFFFF;
  font-weight: 500;
}
.commission-flow-container .flow-list {
  height: calc(100vh - 340rpx);
}
.commission-flow-container .flow-list .flow-item {
  display: flex;
  align-items: flex-start;
  background-color: #FFFFFF;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: -webkit-transform 0.2s;
  transition: transform 0.2s;
  transition: transform 0.2s, -webkit-transform 0.2s;
}
.commission-flow-container .flow-list .flow-item:active {
  -webkit-transform: scale(0.98);
          transform: scale(0.98);
}
.commission-flow-container .flow-list .flow-item .flow-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}
.commission-flow-container .flow-list .flow-item .flow-icon.income {
  background: linear-gradient(135deg, #52C41A, #85E24D);
}
.commission-flow-container .flow-list .flow-item .flow-icon.expense {
  background: linear-gradient(135deg, #FF4D4F, #FF7A7B);
}
.commission-flow-container .flow-list .flow-item .flow-icon.refund {
  background: linear-gradient(135deg, #1890FF, #4CB8FF);
}
.commission-flow-container .flow-list .flow-item .flow-icon.unknown {
  background: linear-gradient(135deg, #FAAD14, #FFD666);
}
.commission-flow-container .flow-list .flow-item .flow-content {
  flex: 1;
}
.commission-flow-container .flow-list .flow-item .flow-content .flow-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}
.commission-flow-container .flow-list .flow-item .flow-content .flow-header .flow-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}
.commission-flow-container .flow-list .flow-item .flow-content .flow-header .flow-amount {
  font-size: 32rpx;
  font-weight: bold;
}
.commission-flow-container .flow-list .flow-item .flow-content .flow-header .flow-amount.positive {
  color: #52C41A;
}
.commission-flow-container .flow-list .flow-item .flow-content .flow-header .flow-amount.negative {
  color: #FF4D4F;
}
.commission-flow-container .flow-list .flow-item .flow-content .flow-details {
  display: flex;
  flex-wrap: wrap;
}
.commission-flow-container .flow-list .flow-item .flow-content .flow-details .detail-item {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
  margin-bottom: 8rpx;
}
.commission-flow-container .flow-list .flow-item .flow-content .flow-details .detail-item text {
  font-size: 24rpx;
  color: #999;
  margin-left: 6rpx;
}
.commission-flow-container .empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}
.commission-flow-container .empty-state .empty-image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 30rpx;
}
.commission-flow-container .empty-state .empty-text {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 16rpx;
}
.commission-flow-container .empty-state .empty-tip {
  font-size: 26rpx;
  color: #999;
}

