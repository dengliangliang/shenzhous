.invite-container {
  padding: 30rpx;
  background: #f5f5f5;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}
.invite-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 40rpx;
}
.invite-card .card-header {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}
.invite-card .card-header .avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.invite-card .card-header .user-info {
  display: flex;
  flex-direction: column;
}
.invite-card .card-header .user-info .nickname {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
}
.invite-card .card-header .user-info .invite-tip {
  font-size: 26rpx;
  color: #FF6B01;
}
.invite-card .invite-code-section {
  background: #f8f8f8;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  text-align: center;
}
.invite-card .invite-code-section .code-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: block;
}
.invite-card .invite-code-section .code-value {
  font-size: 48rpx;
  color: #FF6B01;
  font-weight: bold;
  display: block;
  letter-spacing: 2rpx;
}
.invite-card .code-info .share-desc {
  display: flex;
  align-items: center;
  justify-content: center;
}
.invite-card .code-info .share-desc text {
  font-size: 26rpx;
  color: #666;
  margin-left: 10rpx;
}
.benefits {
  border-top: 1px dashed #eee;
  padding-top: 30rpx;
  margin-top: 20rpx;
}
.benefits .benefit-title {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.benefits .benefit-title text {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-left: 10rpx;
}
.benefits .benefit-list .benefit-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}
.benefits .benefit-list .benefit-item text {
  font-size: 26rpx;
  color: #666;
  margin-left: 10rpx;
}
.share-actions {
  margin-top: 20rpx;
}
.share-actions .share-btn {
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}
.share-actions .share-btn .btn-inner {
  display: flex;
  align-items: center;
  justify-content: center;
}
.share-actions .share-btn .btn-inner .btn-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.share-actions .share-btn.wechat {
  background: #07C160;
  color: #fff;
}
.share-actions .share-btn.copy {
  background: #4A90E2;
  color: #fff;
}

