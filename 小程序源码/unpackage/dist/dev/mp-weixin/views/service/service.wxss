.service-container {
  min-height: 100vh;
  padding: 40rpx 30rpx;
  background-color: #f8f8f8;
  display: flex;
  flex-direction: column;
}
.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}
.header .logo {
  width: 240rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}
.header .title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}
.content {
  flex: 1;
}
.content .card {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}
.content .card .card-title {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}
.content .card .card-title text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-left: 10rpx;
}
.content .card .qrcode-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}
.content .card .qrcode-box .qrcode {
  width: 400rpx;
  height: 400rpx;
  margin-bottom: 20rpx;
  background-color: #f9f9f9;
  border: 1px solid #eeeeee;
}
.content .card .qrcode-box .tip {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 10rpx;
}
.content .card .info-list .info-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.content .card .info-list .info-item .label {
  font-size: 28rpx;
  color: #666666;
  width: 140rpx;
}
.content .card .info-list .info-item .value {
  font-size: 28rpx;
  color: #333333;
  flex: 1;
}
.content .card .info-list .info-item .copy-btn {
  width: 100rpx;
  height: 56rpx;
  line-height: 56rpx;
  font-size: 24rpx;
  color: #FFFFFF;
  background-color: #FF6B01;
  border-radius: 28rpx;
  padding: 0;
  margin: 0;
}
.content .contact-methods {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}
.content .contact-methods .method-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 30rpx;
}
.content .contact-methods .method-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1px solid #F0F0F0;
}
.content .contact-methods .method-item:last-child {
  border-bottom: none;
}
.content .contact-methods .method-item .method-name {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  margin: 0 20rpx;
}
.content .contact-methods .method-item .arrow-icon {
  font-size: 24rpx;
  color: #CCCCCC;
}
.icon-box {
  display: inline-block;
  width: 46rpx;
  height: 46rpx;
  border-radius: 23rpx;
  text-align: center;
  line-height: 46rpx;
  font-size: 24rpx;
  color: #FFFFFF;
}
.icon-box.wechat-icon {
  background-color: #07C160;
}
.icon-box.phone-icon {
  background-color: #FF6B01;
}
.icon-box.email-icon {
  background-color: #FF6B01;
}
.footer {
  padding: 30rpx 0;
  text-align: center;
}
.footer .slogan {
  font-size: 24rpx;
  color: #999999;
}

