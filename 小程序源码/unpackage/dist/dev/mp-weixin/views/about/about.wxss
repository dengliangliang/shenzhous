.about-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 40rpx;
}
.about-container .loading {
  display: flex;
  justify-content: center;
  padding: 40rpx 0;
}
.about-container .loading text {
  font-size: 28rpx;
  color: #999;
}
.about-container .logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 60rpx 0;
}
.about-container .logo-section .logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}
.about-container .logo-section .app-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}
.about-container .logo-section .version {
  font-size: 24rpx;
  color: #999;
}
.about-container .info-section {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}
.about-container .info-section .info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}
.about-container .info-section .info-item:last-child {
  border-bottom: none;
}
.about-container .info-section .info-item .label {
  font-size: 28rpx;
  color: #666;
}
.about-container .info-section .info-item .value {
  font-size: 28rpx;
  color: #333;
  max-width: 450rpx;
  text-align: right;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.about-container .profile-section {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}
.about-container .profile-section .section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  position: relative;
  padding-left: 20rpx;
}
.about-container .profile-section .section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  width: 6rpx;
  height: 30rpx;
  background-color: #FF6B01;
  border-radius: 3rpx;
}
.about-container .profile-section .profile-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  text-align: justify;
}
.about-container .copyright {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 60rpx;
}
.about-container .copyright text {
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
}

