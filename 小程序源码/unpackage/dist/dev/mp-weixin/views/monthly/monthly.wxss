.monthly-container {
  min-height: 100vh;
  background-color: #F8F8F8;
  padding-bottom: 120rpx;
}
.monthly-container .type-tabs {
  display: flex;
  background-color: #FFFFFF;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.monthly-container .type-tabs .tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
  position: relative;
}
.monthly-container .type-tabs .tab-item uni-icons {
  margin-bottom: 8rpx;
}
.monthly-container .type-tabs .tab-item text {
  font-size: 28rpx;
  color: #666666;
}
.monthly-container .type-tabs .tab-item.active text {
  color: #FF6B01;
  font-weight: 500;
}
.monthly-container .type-tabs .tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #FF6B01;
  border-radius: 2rpx;
}
.monthly-container .list-container .invitation-card {
  margin: 30rpx;
  background-color: #FFFFFF;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
}
.monthly-container .list-container .invitation-card .card-content {
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.monthly-container .list-container .invitation-card .card-content uni-icons {
  margin-bottom: 20rpx;
}
.monthly-container .list-container .invitation-card .card-content .title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 10rpx;
}
.monthly-container .list-container .invitation-card .card-content .subtitle {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 30rpx;
}
.monthly-container .list-container .invitation-card .card-content .code-input {
  width: 100%;
  height: 80rpx;
  background-color: #F5F6FA;
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  margin-bottom: 30rpx;
  text-align: center;
  letter-spacing: 2rpx;
}
.monthly-container .list-container .invitation-card .card-content .submit-btn {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(90deg, #FF6B01, #FF9C01);
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.monthly-container .list-container .invitation-card .card-content .submit-btn text {
  font-size: 28rpx;
  color: #FFFFFF;
  font-weight: 500;
}
.monthly-container .list-container .invitation-card .card-content .submit-btn:disabled {
  opacity: 0.6;
}
.monthly-container .list-container .list-content .eligibility-list {
  height: calc(100vh - 200rpx);
}
.monthly-container .list-container .list-content .eligibility-list .eligibility-item {
  margin: 20rpx 30rpx;
  background-color: #FFFFFF;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}
.monthly-container .list-container .list-content .eligibility-list .eligibility-item .card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.monthly-container .list-container .list-content .eligibility-list .eligibility-item .card-header .title {
  display: flex;
  align-items: center;
}
.monthly-container .list-container .list-content .eligibility-list .eligibility-item .card-header .title uni-icons {
  margin-right: 10rpx;
}
.monthly-container .list-container .list-content .eligibility-list .eligibility-item .card-header .title text {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}
.monthly-container .list-container .list-content .eligibility-list .eligibility-item .card-header .status-tag {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  background-color: rgba(82, 196, 26, 0.1);
  color: #52C41A;
}
.monthly-container .list-container .list-content .eligibility-list .eligibility-item .card-header .status-tag.invalid {
  background-color: rgba(255, 77, 79, 0.1);
  color: #FF4D4F;
}
.monthly-container .list-container .list-content .eligibility-list .eligibility-item .info-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}
.monthly-container .list-container .list-content .eligibility-list .eligibility-item .info-row .label {
  font-size: 28rpx;
  color: #666666;
}
.monthly-container .list-container .list-content .eligibility-list .eligibility-item .info-row .value {
  font-size: 28rpx;
  color: #333333;
}
.monthly-container .list-container .list-content .eligibility-list .eligibility-item .info-row .value.highlight {
  color: #FF6B01;
  font-weight: 500;
}
.monthly-container .list-container .list-content .eligibility-list .eligibility-item .info-row .value.highlight .unit {
  font-size: 24rpx;
  color: #999999;
  font-weight: normal;
  margin-left: 4rpx;
}
.monthly-container .list-container .list-content .eligibility-list .eligibility-item .action-buttons {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
}
.monthly-container .list-container .list-content .eligibility-list .eligibility-item .action-buttons .action-btn {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  margin-left: 20rpx;
  background-color: #F5F6FA;
  border-radius: 24rpx;
}
.monthly-container .list-container .list-content .eligibility-list .eligibility-item .action-buttons .action-btn uni-icons {
  margin-right: 6rpx;
}
.monthly-container .list-container .list-content .eligibility-list .eligibility-item .action-buttons .action-btn text {
  font-size: 24rpx;
  color: #666666;
}
.monthly-container .list-container .list-content .eligibility-list .eligibility-item .action-buttons .action-btn:active {
  opacity: 0.8;
}
.monthly-container .apply-list {
  height: calc(100vh - 200rpx);
}
.monthly-container .apply-list .apply-item {
  margin: 20rpx 30rpx;
  background-color: #FFFFFF;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}
.monthly-container .apply-list .apply-item .card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.monthly-container .apply-list .apply-item .card-header .title {
  display: flex;
  align-items: center;
}
.monthly-container .apply-list .apply-item .card-header .title uni-icons {
  margin-right: 10rpx;
}
.monthly-container .apply-list .apply-item .card-header .title text {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}
.monthly-container .apply-list .apply-item .card-header .status-tag {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}
.monthly-container .apply-list .apply-item .card-header .status-tag.pending {
  background-color: rgba(250, 173, 20, 0.1);
  color: #FAAD14;
}
.monthly-container .apply-list .apply-item .card-header .status-tag.passed {
  background-color: rgba(82, 196, 26, 0.1);
  color: #52C41A;
}
.monthly-container .apply-list .apply-item .card-header .status-tag.rejected {
  background-color: rgba(255, 77, 79, 0.1);
  color: #FF4D4F;
}
.monthly-container .apply-list .apply-item .card-header .status-tag.canceled {
  background-color: rgba(153, 153, 153, 0.1);
  color: #999999;
}
.monthly-container .apply-list .apply-item .info-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
  margin-bottom: 20rpx;
}
.monthly-container .apply-list .apply-item .info-grid .info-item .label {
  font-size: 26rpx;
  color: #999999;
  margin-bottom: 4rpx;
  display: block;
}
.monthly-container .apply-list .apply-item .info-grid .info-item .value {
  font-size: 28rpx;
  color: #333333;
}
.monthly-container .apply-list .apply-item .reject-reason {
  background-color: #FFF1F0;
  padding: 16rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: flex-start;
}
.monthly-container .apply-list .apply-item .reject-reason uni-icons {
  margin-right: 8rpx;
  margin-top: 4rpx;
}
.monthly-container .apply-list .apply-item .reject-reason .label {
  font-size: 26rpx;
  color: #FF4D4F;
  margin-right: 8rpx;
}
.monthly-container .apply-list .apply-item .reject-reason .value {
  font-size: 26rpx;
  color: #666666;
  flex: 1;
}
.monthly-container .apply-list .apply-item .action-buttons {
  display: flex;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1px solid #F5F5F5;
}
.monthly-container .apply-list .apply-item .action-buttons .action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  background-color: #F8F8F8;
  margin-right: 20rpx;
}
.monthly-container .apply-list .apply-item .action-buttons .action-btn uni-icons {
  margin-right: 6rpx;
}
.monthly-container .apply-list .apply-item .action-buttons .action-btn text {
  font-size: 24rpx;
  color: #666666;
}
.monthly-container .apply-list .apply-item .action-buttons .action-btn.danger {
  background-color: rgba(255, 77, 79, 0.1);
}
.monthly-container .apply-list .apply-item .action-buttons .action-btn.danger text {
  color: #FF4D4F;
}
.monthly-container .empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}
.monthly-container .empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}
.monthly-container .empty-state text {
  font-size: 30rpx;
  color: #666666;
  margin-bottom: 10rpx;
}
.monthly-container .empty-state .sub-text {
  font-size: 26rpx;
  color: #999999;
}
.monthly-container .bottom-btn {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 20rpx 30rpx;
  background-color: #FFFFFF;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.monthly-container .bottom-btn .add-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 88rpx;
  background: linear-gradient(90deg, #FF6B01, #FF9C01);
  border-radius: 44rpx;
}
.monthly-container .bottom-btn .add-btn uni-icons {
  margin-right: 10rpx;
}
.monthly-container .bottom-btn .add-btn text {
  font-size: 30rpx;
  color: #FFFFFF;
  font-weight: 500;
}

