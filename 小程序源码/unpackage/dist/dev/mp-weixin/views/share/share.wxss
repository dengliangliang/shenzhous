.share-container {
  padding: 30rpx;
  min-height: 100vh;
  background: #f8f8f8;
  display: flex;
  flex-direction: column;
}
.share-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}
.share-card .card-header {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #f0f0f0;
}
.share-card .card-header .app-logo {
  width: 220rpx;
  height: 80rpx;
  margin-right: 20rpx;
}
.share-card .card-header .app-info {
  flex: 1;
}
.share-card .card-header .app-info .app-slogan {
  font-size: 26rpx;
  color: #666;
}
.share-card .card-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.share-card .card-content .share-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  text-align: center;
}
.share-card .card-content .share-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
  text-align: center;
}
.share-card .card-content .qrcode-box {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.share-card .card-content .qrcode-box .qrcode {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 20rpx;
  border-radius: 15rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}
.share-card .card-content .qrcode-box .tip {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
}
.share-card .card-content .qrcode-box .official-account {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.share-card .card-content .qrcode-box .official-account .account-name {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  margin-right: 16rpx;
}
.share-card .card-content .qrcode-box .official-account .copy-btn {
  background: #f0f0f0;
  color: #666;
  font-size: 24rpx;
  padding: 4rpx 20rpx;
  border-radius: 30rpx;
  line-height: 1.5;
  margin: 0;
}
.share-card .card-content .benefits {
  width: 100%;
  margin-top: 30rpx;
  padding-top: 30rpx;
  border-top: 1px dashed #eee;
}
.share-card .card-content .benefits .benefit-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.share-card .card-content .benefits .benefit-item text {
  font-size: 28rpx;
  color: #666;
  margin-left: 16rpx;
}
.share-actions {
  margin-top: auto;
  margin-bottom: 30rpx;
}
.share-actions .share-btn {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}
.share-actions .share-btn .btn-inner {
  display: flex;
  align-items: center;
  justify-content: center;
}
.share-actions .share-btn .btn-inner .btn-icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
.share-actions .share-btn.wechat {
  background: #07C160;
  color: #fff;
}
.share-actions .share-btn.poster {
  background: #FF6B01;
  color: #fff;
  margin-bottom: 30rpx;
}

