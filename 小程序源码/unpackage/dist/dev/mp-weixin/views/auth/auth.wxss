.auth-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 30rpx;
}
.auth-status {
  padding: 60rpx 0;
}
.auth-status .status-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}
.auth-status .status-card .status-text {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  margin: 30rpx 0;
}
.auth-status .status-card .auth-info {
  width: 100%;
  margin-top: 40rpx;
}
.auth-status .status-card .auth-info .info-item {
  font-size: 28rpx;
  color: #666;
  line-height: 2;
  display: block;
}
.auth-form {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}
.auth-form .form-header {
  text-align: center;
  margin-bottom: 40rpx;
}
.auth-form .form-header .title {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}
.auth-form .form-header .subtitle {
  font-size: 26rpx;
  color: #999;
}
.auth-form .input-group {
  margin-bottom: 40rpx;
}
.auth-form .input-group .input-item {
  margin-bottom: 30rpx;
}
.auth-form .input-group .input-item .label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}
.auth-form .input-group .input-item .input {
  width: 100%;
  height: 88rpx;
  background: #f8f8f8;
  border-radius: 44rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #333;
}
.auth-form .input-group .input-item .input:focus {
  background: #f0f0f0;
}
.auth-form .submit-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #FF6B01, #FF8F1F);
  border-radius: 44rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}
.auth-form .submit-btn:active {
  opacity: 0.9;
}
.auth-form .submit-btn[disabled] {
  background: #ccc;
  opacity: 0.8;
}
.auth-form .tips {
  display: flex;
  align-items: center;
  justify-content: center;
}
.auth-form .tips .uni-icons {
  margin-right: 10rpx;
}
.auth-form .tips text {
  font-size: 24rpx;
  color: #999;
}

