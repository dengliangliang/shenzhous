.feedback-container {
  min-height: 100vh;
  padding: 30rpx;
  background-color: #f8f8f8;
  display: flex;
  flex-direction: column;
}
.form-section {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding: 30rpx;
  margin-bottom: 30rpx;
}
.form-section .form-item {
  margin-bottom: 40rpx;
}
.form-section .form-item .item-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}
.form-section .form-item .item-label .required {
  color: #ff4d4f;
  margin-right: 6rpx;
}
.form-section .form-item .item-label .sub-label {
  font-size: 24rpx;
  color: #999;
  font-weight: normal;
  margin-left: 10rpx;
}
.form-section .form-item .type-list {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}
.form-section .form-item .type-list .type-item {
  padding: 16rpx 30rpx;
  background-color: #f7f7f7;
  border-radius: 6rpx;
  margin: 10rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s;
}
.form-section .form-item .type-list .type-item.active {
  background-color: #fff5ee;
  color: #FF6B01;
  border: 1px solid #FF6B01;
}
.form-section .form-item .textarea-box {
  position: relative;
  border: 1px solid #eee;
  border-radius: 8rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
}
.form-section .form-item .textarea-box .input-textarea {
  width: 100%;
  height: 240rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}
.form-section .form-item .textarea-box .word-count {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  font-size: 24rpx;
  color: #999;
}
.form-section .form-item .input-box {
  border: 1px solid #eee;
  border-radius: 8rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
}
.form-section .form-item .input-box .input-field {
  width: 100%;
  height: 60rpx;
  font-size: 28rpx;
  color: #333;
}
.submit-section {
  padding: 20rpx 0;
}
.submit-section .submit-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: linear-gradient(90deg, #FF6B01, #FF8F1F);
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 45rpx;
  box-shadow: 0 6rpx 16rpx rgba(255, 107, 1, 0.3);
}
.submit-section .submit-btn:active {
  -webkit-transform: translateY(2rpx);
          transform: translateY(2rpx);
}
.submit-section .submit-btn[disabled] {
  background: #cccccc;
  box-shadow: none;
}
.tips-section {
  margin-top: 40rpx;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.tips-section .tip-title {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.tips-section .tip-title text {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-left: 10rpx;
}
.tips-section .tip-item {
  font-size: 26rpx;
  color: #666;
  padding: 6rpx 0;
  padding-left: 26rpx;
}

